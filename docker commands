setup:

docker pull mongo && docker stop mongo && docker rm mongo && docker run --name mongo -v /var/data/mongo:/data/db -p 27017:27017 -d mongo:latest --auth

docker pull abinnewies/chat-webserver && docker stop web && docker rm web && docker run --name web --link mongo:mongo -p 8080:8080 -d abinnewies/chat-webserver

docker pull abinnewies/chat-server && docker stop chat && docker rm chat && docker run --link mongo:mongo -p 49165:49165 --name chat -v /var/data/mnesia:/var/data/mnesia -v /etc/certs:/etc/certs -d abinnewies/chat-server /usr/src/app/run.sh chat1

docker pull nginx && docker stop nginx && docker rm nginx && docker run --name nginx --net=host -v /etc/certs:/etc/certs  -v /var/log/nginx:/var/log/nginx -v /etc/nginx/nginx.conf:/etc/nginx/nginx.conf -d nginx

redis cli:
docker stop redis-cli && docker rm redis-cli && docker run -it --name redis-cli --link redis1:redis1 --rm redis sh -c 'exec redis-cli -h "$REDIS1_PORT_6379_TCP_ADDR" -p "$REDIS1_PORT_6379_TCP_PORT"'
