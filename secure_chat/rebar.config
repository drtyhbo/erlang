{erl_opts, [
	debug_info,
	{parse_transform, lager_transform}
]}.
{plugins, [pc]}.
{provider_hooks, [
	{pre, [
		{compile, {pc, compile}},
		{clean, {pc, clean}}
	]}
]}.
{deps, [
	{lager, {git, "https://github.com/basho/lager.git", {tag, "3.0.2"}}},
	{mochijson2, {git, "https://github.com/bjnortier/mochijson2.git"}},
	{eredis, {git, "https://github.com/wooga/eredis.git", {tag, "v1.0.8"}}},
	{eredis_cluster, {git, "https://github.com/adrienmo/eredis_cluster.git", {tag, "0.5.4"}}},
	{poolboy, {git, "https://github.com/devinus/poolboy.git", {tag, "1.5.1"}}},
	{syn, {git, "https://github.com/drtyhbo/syn.git", {branch, "v0.10.1"}}},
	{jiffy, {git, "https://github.com/davisp/jiffy.git", {tag, "0.14.7"}}},
	{apns, {git, "https://github.com/inaka/apns4erl.git", {tag, "1.0.6"}}}
]}.
{relx, [
	{release, {secure_chat, "1.0.0"}, [
		secure_chat, lager, mochijson2, eredis, eredis_cluster, mnesia, xmerl, poolboy, syn, jiffy, apns]},
	{include_erts, false},
	{vm_args, "config/vm.args"},
	{sys_config, "config/sys.config"}
]}.
